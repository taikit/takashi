<div class="container">
  <h1 class="text-center">Editing your profile</h1>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <table class="table">
        <tbody>
        <tr><td class="h4">Your name :</td><td class="h4"><%= @user.name %></td></tr>
        <tr><td class="h4">Your profile image :</td><td class="h4"><%= image_tag(@user.profile_image + "?type=large") %></td></tr>
        </tbody>
      </table>
      <div class="text-center" style="margin: 10px 0;">
        <%= simple_form_for @user do |f| %>
            <%= f.error_notification %>
            <%= f.label :profile %>
            <%= f.text_field :profile %>
            <%= f.submit %>
        <% end %>
      </div>
    </div>
  </div>
</div>
