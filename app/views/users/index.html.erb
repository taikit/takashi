<div class="container">

  <div class="row">
    <div class="col-md-9">
      <div>
        <h2 class="text-center">Your conducted plans</h2>

        <div class="text-center">
          <div class="table-responsive">
            <table class="table table-bordered">
              <tbody class="nav nav-pills nav-stacked">
                <% @user.plans.each do |plan| %>
                <tr >
                  <th style="width:70%; padding-left:20px;"><%= link_to plan.title, plan %></th>
                  <th style="width:30%; padding-left:80px;"><%= link_to 'edit', edit_plan_path(plan) ,class: "btn btn-primary" %></th>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
        <div class="plan_body"></div>
      </div>

      <div>
        <h2 class="text-center">Your joined plans</h2>
        <div class="text-center">
          <div class="table-responsive">
            <table class="table table-bordered">
              <tbody class="nav nav-pills nav-stacked">
                <% @user.bookings.each do |booking| %>
                <tr >
                  <th style="width:70%; padding-left:20px;"><%= link_to booking.plan.title, root_path %></th>
                  <th style="width:70%; padding-left:80px;"><%= link_to 'edit', edit_plan_path(booking.plan) %></th>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
        <div class="plan_body"></div>
      </div>
    </div>

    <div class="col-md-3" style="  margin-top: 30px;">
      <div class="row">
        <div class="col-xs-6 col-md-12" style="margin: 10px 0;">
            <div class="bs_boader text-center">
            <h4>Your Profile</h4>
            <div align="right" style="margin:10px;">
              <%= link_to 'Edit' , edit_user_path(@user) , class: "btn btn-primary" %>
            </div>
            <div align="center">
              <%= image_tag(@user.profile_image + "?type=large") %>
            </div>
            <div align="center" style="margin:10px;">
              <%= @user.name %>
            </div>
            <div align="left" style="margin:10px;">
              <%= @user.profile %>
            </div>
          </div>
        </div>

      </div>
    </div>

  </div>
</div>
