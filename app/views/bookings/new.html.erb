<h1>New Booking</h1>

<%= simple_form_for(@booking) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :user_id %>
      <%= f.input :plan_id %>
      <%= f.input :charge_id %>
      <%= f.input :card_fingerprint %>
    </div>

    <div class="form-actions">
      <%= f.button :submit %>
    </div>
<% end %>


<%= link_to 'Back', bookings_path %>
