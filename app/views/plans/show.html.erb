<div class="container show_co" style="margin-top:100px;">
  <h1 class="text-center"><%= @plan.title %></h1>
  <div class="row">
    <div class="col-md-8" >
      <button class="btn btn-success" type="submit">
        <div class="text-center"><%= image_tag(@plan.image) %></div>
      </button>

      <div><%= @plan.body %></div>

    </div>

    <div class="col-md-4">
      <div class="h4 text-center" style="background-color: #ccc; border-radius: 5px; padding: 10px; height: 200px; ">
        <%= image_tag(@plan.user.profile_image + "?type=large") %><br>
        <p class="h4">このプランの作成者<br><%= @plan.user.name %></p>
        <p><%= @plan.user.profile %></p>
      </div>
      <div>
        <%= link_to("このプランを申し込む", new_plan_booking_path(@plan), class: "btn btn-primary") %>
      </div>
      <div>
        <ul>
          <% @plan.days.each do |day| %>
            <li><%= radio_button('day', day.met_at, day.met_at) %> <%= day.met_at %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
