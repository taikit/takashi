<div class="container-fluid">
  <div class="row">
    <h1 class="text-center">現在募集中のプラン</h1>
    <div class="text-center"><%= link_to('あなたのオリジナルプランを作成しましょう!', new_plan_path, class: "btn btn-primary", style: "color: #fff;") %></div>
  </div>
  <div class="row">
    <% @plans.each do |plan| %>
      <div class="col-md-3 col-sm-6" style="padding: 10px;">
        <%= link_to(plan, class: "display: block;") do %>
          <div class="thumbnail" style="box-shadow: 1px 3px 3px #333;">
            <%= image_tag(plan.image) %>
            <div class="caption">
              <h2 class="h3 text-center"><%= plan.title %></h2>
              <div class="tr word-wrap:break-word;"><%= "こんにちは、今日の天気はいかがですか。こんにちは、今日の天気はいかがですか。こんにちは、今日の天気はいかがですか。".truncate(50) + "..." %></div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

